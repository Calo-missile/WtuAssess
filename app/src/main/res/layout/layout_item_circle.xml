<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_user_img"
                android:layout_width="50dp"

                android:layout_height="50dp"
                android:layout_marginRight="12dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/tv_ciruser_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/circle_user_img"
                android:text="@string/app_name"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_cir_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_ciruser_name"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/circle_user_img"
                android:text="发布时间"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_circle_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="这是内容"
            android:textSize="16sp"/>

        <include layout="@layout/item_circle_action"/>
        
        <LinearLayout
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:focusable="false"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_like"/>

            <TextView
                android:id="@+id/tv_like_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小千"
                android:textColor="#4FC1E9"/>
            
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>
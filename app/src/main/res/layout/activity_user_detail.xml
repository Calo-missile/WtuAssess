<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <android.support.v7.widget.Toolbar
        android:id="@+id/userDetail_toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/Theme.AppCompat.Light"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        
        <TextView
            android:layout_gravity="center"
            android:id="@+id/tv_title_detail"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
    </android.support.v7.widget.Toolbar>
    
    <LinearLayout
        android:background="@mipmap/icon_beijingimg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/icon_user_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="26dp"
                android:src="@mipmap/icon_userimg"/>

            <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_detail_username"
                    android:text="我是小千啊"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"/>

                <ImageView
                    android:id="@+id/img_sex"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"
                    android:src="@mipmap/icon_gril4"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:background="#c3c1c1"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingLeft="14dp"
                android:paddingTop="10dp"
                android:id="@+id/tv_openId"
                android:textSize="24sp"
                android:text="hahhaahhhh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:background="#c3c1c1"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:paddingLeft="14dp"
                android:paddingTop="10dp"
                android:id="@+id/tv_phone"
                android:textSize="24sp"
                android:text="hahhaahhhh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:background="#c3c1c1"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:paddingLeft="14dp"
                android:paddingTop="10dp"
                android:id="@+id/tv_address"
                android:textSize="24sp"
                android:text="hahhaahhhh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="#c3c1c1"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </LinearLayout>
    </LinearLayout>

    

</LinearLayout>
